<div {{bind-attr class=shareboxClass }} >
  <div class="well">
    <form action="/post" method="POST" {{action "submit" on="submit"}} class="sharebox">
      <div class="form-group">
          {{textarea name="content" value=postNew.content placeholder=contentPlaceholder classNames="form-control post-content" focus-in="openBox"}}
      </div>
      {{#if shareImages}}
        <div class="form-group add-images">
          <label for="addImages" class="col-sm-2 control-label">{{t "Attach images"}}</label>
          <div class="col-sm-10">
            {{file-upload files=filesNew}}
          </div>
        </div>
        <div class="form-group images-preview">
        {{#each files}}
          {{we-image-preview file=this}}
        {{/each}}
        </div>
      {{/if}}

      <div class="footer">
        <div class="form-group attach-options">
          <button type="button" class="btn btn-xs btn-default">
            <i class="glyphicon glyphicon-picture"></i> {{t "Image"}}
          </button>
          <button type="button" class="btn btn-xs btn-default">
            <i class="glyphicon glyphicon-link"></i> {{t "Link"}}
          </button>
        </div>

        <div class="form-group">
          <div class="input-group">
            <label for="toId" class="input-group-addon">{{t "To"}}:</label>
            <input name="toIds" class="form-control input-md tm-input tm-input-success" type="text">
          </div>
          <div class="toIdsSelectedDisplay"></div>
        </div>

        <div class="actions">
          <button type="submit" class="btn btn-primary">
            <span class="glyphicon glyphicon-ok"></span> {{t "Share"}}
          </button>
          <button type="button" {{action 'closeBox'}} class="btn btn-default cancel"> {{t "Cancel"}}</button>
        </div>
      </div>

    </form>
  </div>
</div>